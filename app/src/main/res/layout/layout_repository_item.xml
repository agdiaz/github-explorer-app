<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <android.support.v7.widget.CardView
      android:id="@+id/card_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center"
      android:layout_margin="@dimen/card_margin"
      android:elevation="3dp"
      card_view:cardCornerRadius="@dimen/card_album_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <TextView android:id="@+id/textViewRepositoryTitle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingLeft="@dimen/album_title_padding"
          android:paddingRight="@dimen/album_title_padding"
          android:paddingTop="@dimen/album_title_padding"
          android:textColor="@color/user_title"
          android:textSize="16dp" />

      <TextView android:id="@+id/textViewRepositoryDescription"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/textViewRepositoryTitle"
          android:paddingBottom="@dimen/songs_count_padding_bottom"
          android:paddingLeft="@dimen/album_title_padding"
          android:paddingRight="@dimen/album_title_padding"
          android:textSize="@dimen/songs_count"/>

      <TextView android:id="@+id/textViewRepositoryLanguage"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/textViewRepositoryDescription"
          android:paddingBottom="@dimen/songs_count_padding_bottom"
          android:paddingLeft="@dimen/album_title_padding"
          android:paddingRight="@dimen/album_title_padding"
          android:textSize="10dp"/>

      <TextView android:id="@+id/textViewRepositoryPrivate"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/textViewRepositoryDescription"
          android:layout_toRightOf="@+id/textViewRepositoryLanguage"
          android:paddingBottom="@dimen/songs_count_padding_bottom"
          android:paddingLeft="@dimen/album_title_padding"
          android:paddingRight="@dimen/album_title_padding"
          android:textSize="10dp"/>
    </RelativeLayout>
  </android.support.v7.widget.CardView>
</LinearLayout>